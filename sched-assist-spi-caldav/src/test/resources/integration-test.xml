<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="ignoreResourceNotFound" value="true"/>
        <property name="locations">
            <list>
            	 <value>classpath:/integration-SAMPLE.properties</value>
                 <value>classpath:/integration.properties</value>
            </list>
        </property>
    </bean>
    
    <!--  
    Import either "bedework.xml" or "default-caldav.xml" or "oracle-comms.xml" 
    One or the other, never more than 1 of the 3.
     -->
    <import resource="integration/bedework.xml"/>
    <!--  
    <import resource="integration/oracle-comms.xml"/>
    <import resource="integration/default-caldav.xml"/>
    -->
    
    <context:annotation-config />
    <context:component-scan base-package="org.jasig.schedassist.impl.caldav"/>  
    
    <!-- 
     | An AffiliationSource implementation tells the scheduling assistant which accounts are
     | Instructors and which accounts are Advisors   
     +-->      
    <bean id="affiliationSource" class="org.jasig.schedassist.NullAffiliationSourceImpl"/>
  
   	<import resource="integration/sample-calendarAccounts.xml"/>
    
    <bean id="caldavAdminAuthScope" class="org.apache.http.auth.AuthScope">
    	<constructor-arg index="0"><value>${caldav.admin.authscope.host}</value></constructor-arg>
    	<constructor-arg index="1"><value>${caldav.admin.authscope.port}</value></constructor-arg>
    	<constructor-arg index="2"><value>${caldav.admin.authscope.realm}</value></constructor-arg>
    	<constructor-arg index="3" value="BASIC"/>
    </bean>
    <bean id="httpHost" class="org.apache.http.HttpHost">
    	<constructor-arg index="0" value="${caldav.admin.authscope.host}"/>
    	<constructor-arg index="1" value="${caldav.admin.authscope.port}"/>
    	<constructor-arg index="2" value="${caldav.host.scheme}"/>
    </bean>
    <bean id="schemeFactory" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
   		<property name="staticMethod"><value>org.apache.http.impl.conn.SchemeRegistryFactory.createDefault</value></property>
 	</bean>
    <bean id="clientConnectionManager" class="org.apache.http.impl.conn.tsccm.ThreadSafeClientConnManager">
    	<constructor-arg ref="schemeFactory"/>
    	<constructor-arg index="1" value="${caldav.http.connectionTimeout}"/>
    	<constructor-arg index="2" value="MILLISECONDS"/>
    	<property name="defaultMaxPerRoute" value="${caldav.http.defaultMaxConnectionsPerHost}"/>
    	<property name="maxTotal" value="${caldav.http.maxTotalConnections}"/>
    </bean>
    <bean id="httpClient" class="org.apache.http.impl.client.DefaultHttpClient">
    	<constructor-arg ref="clientConnectionManager"/>
    </bean>    
</beans>